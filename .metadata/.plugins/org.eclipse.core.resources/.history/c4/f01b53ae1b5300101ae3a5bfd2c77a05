        async function openGroupManageModal(groupNo, groupName, isLeader) {
            targetGroupNo = groupNo;
            document.getElementById('modal-group-name').textContent = groupName;
            document.getElementById('leader-actions').style.display = isLeader ? 'block' : 'none';
            // ë¦¬ë”ê°€ ì•„ë‹ ë•Œë„ 'ê·¸ë£¹ íƒˆí‡´' ë²„íŠ¼ì€ ë³´ì—¬ì•¼ í•˜ë¯€ë¡œ, í•´ë‹¹ ë²„íŠ¼ì€ leader-actions ë°–ìœ¼ë¡œ ì´ë™
             document.querySelector('#groupManageModal .management-actions > .btn').style.display = !isLeader ? 'inline-block' : 'none';

            openModal('groupManageModal');

            const memberListContainer = document.getElementById('modal-member-list');
            memberListContainer.innerHTML = '<p>ë©¤ë²„ë¥¼ ë¶ˆëŸ¬ì˜¤ëŠ” ì¤‘ì…ë‹ˆë‹¤...</p>';
            try {
                const response = await fetch(`/api/group/${groupNo}/members`);
                if (!response.ok) throw new Error('ë©¤ë²„ ëª©ë¡ ë¡œë“œ ì‹¤íŒ¨');
                const members = await response.json();
                memberListContainer.innerHTML = members.map(member => {
                    const roleBadge = member.type === 'L' ? '<span class="role-badge leader">ë¦¬ë”</span>' : '<span class="role-badge member">ë©¤ë²„</span>';
                    const delegateButton = (isLeader && member.type !== 'L') ? `<button class="btn" style="margin-left:8px;" onclick="delegateLeader(targetGroupNo, '${member.memberId}')">ìœ„ì„</button>` : '';
                    return `<div class="member-item"><span>${member.nickname} (${member.memberId})</span><div>${roleBadge}${delegateButton}</div></div>`;
                }).join('');
            } catch (error) {
                console.error(error);
                memberListContainer.innerHTML = '<p style="color: red;">ë©¤ë²„ ëª©ë¡ì„ ë¶ˆëŸ¬ì˜¤ëŠ” ë° ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤.</p>';
            }
        }

        function toggleInviteUI(show) {
            const inviteSection = document.getElementById('inline-invite-section');
            if (show) {
                selectedMemberIds = []; // ì´ˆëŒ€ UI ì—´ ë•Œë§ˆë‹¤ ì´ˆê¸°í™”
                inviteSection.innerHTML = `
                    <h5>ìƒˆ ë©¤ë²„ ì´ˆëŒ€</h5>
                    <div class="form-group">
                        <label for="inlineMemberSearch" class="form-group__label">ì´ˆëŒ€í•  ë©¤ë²„ ê²€ìƒ‰</label>
                        <input type="text" id="inlineMemberSearch" placeholder="ì´ˆëŒ€í•  ë©¤ë²„ ID ê²€ìƒ‰" class="form-group__input" oninput="searchMembers(this, 'inline-')" autocomplete="off">
                        <div id="inline-searchResults" class="search-results-container" style="display: none;"></div>
                    </div>
                    <div>
                        <div class="form-group__label" style="font-size: 12px; color: var(--color-fg-muted);">ì„ íƒëœ ë©¤ë²„:</div>
                        <div id="inline-selectedMembers" class="selected-members-container"></div>
                    </div>
                    <div class="modal__footer" style="justify-content: flex-start; padding-left: 0;">
                        <button type="button" class="btn btn--primary" onclick="sendInvites()">ì´ˆëŒ€ ë³´ë‚´ê¸°</button>
                        <button type="button" class="btn" onclick="toggleInviteUI(false)">ì·¨ì†Œ</button>
                    </div>`;
                inviteSection.style.display = 'block';
            } else {
                inviteSection.style.display = 'none';
                inviteSection.innerHTML = '';
            }
        }


        // --- ì„œë²„ í†µì‹ (Fetch) í•¨ìˆ˜ ---
        function submitLiveRoomCreation(event) {
            event.preventDefault();
            const roomName = document.getElementById('liveRoomNameInput').value;
            if (!roomName.trim()) { alert('ë°© ì´ë¦„ì„ ì…ë ¥í•´ì£¼ì„¸ìš”.'); return; }

            fetch('/api/live-rooms', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ roomName: roomName })
            })
            .then(response => {
                if (response.ok) return response.json();
                else throw new Error('ë°© ìƒì„±ì— ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤.');
            })
            .then(createdRoom => {
                alert('ë°©ì´ ì„±ê³µì ìœ¼ë¡œ ìƒì„±ë˜ì—ˆìŠµë‹ˆë‹¤!');
                window.location.href = '/live-room/' + createdRoom.roomId;
            })
            .catch(error => {
                console.error(error);
                alert(error.message);
            });
        }
        
        function submitGroupCreation(event) {
            event.preventDefault();

            if (isInviteMode) {
                // ì´ˆëŒ€ ëª¨ë“œì¼ ê²½ìš°
                if (selectedMemberIds.length === 0) {
                    alert('ì´ˆëŒ€í•  ë©¤ë²„ë¥¼ ì„ íƒí•´ì£¼ì„¸ìš”.');
                    return;
                }
                const params = new URLSearchParams();
                selectedMemberIds.forEach(id => params.append('memberIds', id));

                // ìƒˆë¡œìš´ 'ë©¤ë²„ ì´ˆëŒ€' API í˜¸ì¶œ
                fetch(`/api/group/${targetGroupNo}/invite`, {
                    method: 'POST',
                    body: params
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        closeCreateGroupModal();
                        // ê´€ë¦¬ ëª¨ë‹¬ì˜ ë©¤ë²„ ëª©ë¡ ìƒˆë¡œê³ ì¹¨ (ì„ íƒì‚¬í•­)
                        openGroupManageModal(targetGroupNo, document.getElementById('modal-group-name').textContent, true);
                    } else {
                        alert('ì´ˆëŒ€ ì‹¤íŒ¨: ' + data.message);
                    }
                });

            } else {
                // ê¸°ì¡´ì˜ ê·¸ë£¹ ìƒì„± ëª¨ë“œì¼ ê²½ìš°
                const groupName = document.getElementById('groupNameInput').value;
                if (!groupName.trim()) {
                    alert('ê·¸ë£¹ëª…ì„ ì…ë ¥í•´ì£¼ì„¸ìš”');
                    return;
                }
                const params = new URLSearchParams();
                params.append('groupName', groupName);
                selectedMemberIds.forEach(id => params.append('memberIds', id));

                fetch('/group/create-with-invites', {
                    method: 'POST',
                    body: params
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        closeCreateGroupModal();
                        location.reload();
                    } else {
                        alert('ê·¸ë£¹ ìƒì„± ì‹¤íŒ¨: ' + data.message);
                    }
                });
            }
        }

        function sendInvites() {
    	    if (selectedMemberIds.length === 0) {
    	        alert('ì´ˆëŒ€í•  ë©¤ë²„ë¥¼ ì„ íƒí•´ì£¼ì„¸ìš”.');
    	        return;
    	    }
    	    const params = new URLSearchParams();
    	    selectedMemberIds.forEach(id => params.append('memberIds', id));

    	    // 'targetGroupNo'ëŠ” openGroupManageModalì—ì„œ ì„¤ì •ëœ ì „ì—­ ë³€ìˆ˜
    	    fetch(`/api/group/${targetGroupNo}/invite`, {
    	        method: 'POST',
    	        body: params
    	    })
    	    .then(response => response.json())
    	    .then(data => {
    	        if (data.success) {
    	            alert(data.message);
    	            toggleInviteUI(false); // ì„±ê³µ í›„ ì´ˆëŒ€ UI ë‹«ê¸°
    	            // ë©¤ë²„ ëª©ë¡ ìƒˆë¡œê³ ì¹¨
    	            openGroupManageModal(targetGroupNo, document.getElementById('modal-group-name').textContent, true);
    	        } else {
    	            alert('ì´ˆëŒ€ ì‹¤íŒ¨: ' + data.message);
    	        }
    	    });
    	}
        
        //ê·¸ë£¹ì¥ ìœ„ì„
        function delegateLeader(groupNo, newLeaderId) {
            if (!confirm(newLeaderId + ' ë‹˜ì—ê²Œ ë¦¬ë”ë¥¼ ìœ„ì„í•˜ì‹œê² ìŠµë‹ˆê¹Œ? ì´ ì‘ì—…ì€ ë˜ëŒë¦´ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.')) {
                return;
            }

            const params = new URLSearchParams();
            params.append('newLeaderId', newLeaderId);

            fetch(`/api/group/${groupNo}/delegate`, {
                method: 'POST',
                body: params
            })
            .then(response => response.json())
            .then(data => {
                alert(data.message);
                if (data.success) {
                    location.reload(); // ì„±ê³µ ì‹œ í˜ì´ì§€ ìƒˆë¡œê³ ì¹¨
                }
            });
        }
        
        //ê·¸ë£¹ì‚­ì œ
        function deleteGroup(groupNo) {
            if (!confirm('ì •ë§ë¡œ ê·¸ë£¹ì„ ì‚­ì œí•˜ì‹œê² ìŠµë‹ˆê¹Œ? ëª¨ë“  ë©¤ë²„ì™€ ê²Œì‹œê¸€ì´ ì‚¬ë¼ì§‘ë‹ˆë‹¤.')) {
                return;
            }

            fetch(`/api/group/${groupNo}/delete`, {
                method: 'POST'
            })
            .then(response => response.json())
            .then(data => {
                alert(data.message);
                if (data.success) {
                    location.reload();
                }
            });
        }
        
        //ê·¸ë£¹ íƒˆí‡´
        function leaveGroup(groupNo) {
            if (!confirm('ì •ë§ë¡œ ê·¸ë£¹ì—ì„œ íƒˆí‡´í•˜ì‹œê² ìŠµë‹ˆê¹Œ?')) {
                return;
            }

            fetch(`/api/group/${groupNo}/leave`, {
                method: 'POST'
            })
            .then(response => response.json())
            .then(data => {
                alert(data.message);
                if (data.success) {
                    location.reload();
                }
            });
        }
       
        // ì´ˆëŒ€ ìˆ˜ë½/ê±°ì ˆ í•¨ìˆ˜ë“¤
        function acceptGroupInvite(inviteNo) {
            if(confirm('ì´ˆëŒ€ë¥¼ ìˆ˜ë½í•˜ì‹œê² ìŠµë‹ˆê¹Œ?')) {
                fetch('/invite/accept', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: 'inviteNo=' + inviteNo
                }).then(response => {
                    if(response.ok) {
                        closeModal('inviteModal');
                        location.reload();
                    } else {
                        alert('ì´ˆëŒ€ ìˆ˜ë½ì— ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤.');
                    }
                });
            }
        }
        
        function rejectGroupInvite(inviteNo) {
            if(confirm('ì´ˆëŒ€ë¥¼ ê±°ì ˆí•˜ì‹œê² ìŠµë‹ˆê¹Œ?')) {
                fetch('/invite/reject', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: 'inviteNo=' + inviteNo
                }).then(response => {
                     if(response.ok) {
                        closeModal('inviteModal');
                        location.reload();
                    } else {
                        alert('ì´ˆëŒ€ ê±°ì ˆì— ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤.');
                    }
                });
            }
        }
        
        
        function searchMembers(inputElement, prefix = '') {
            const query = inputElement.value;
            const searchResultsContainer = document.getElementById(prefix + 'searchResults'); // idë¡œ ì§ì ‘ ì°¾ê¸°

            if (query.trim().length < 1) {
                searchResultsContainer.innerHTML = '';
                searchResultsContainer.style.display = 'none';
                return;
            }

            fetch(`/member/search?q=${encodeURIComponent(query)}`)
            .then(response => response.json())
            .then(userIds => {
                const filteredUserIds = userIds.filter(userId => !selectedMemberIds.includes(userId));
                
                if (filteredUserIds.length === 0) {
                    searchResultsContainer.innerHTML = `<div class="search-result-item--empty">ê²€ìƒ‰ ê²°ê³¼ê°€ ì—†ìŠµë‹ˆë‹¤.</div>`;
                } else {
                    // selectMember í˜¸ì¶œ ì‹œì—ë„ prefixë¥¼ ë„˜ê²¨ì¤ë‹ˆë‹¤.
                    searchResultsContainer.innerHTML = filteredUserIds.map(userId => `
                        <div class="search-result-item" onclick="selectMember('${userId}', '${prefix}')">
                            ${userId}
                        </div>
                    `).join('');
                }
                searchResultsContainer.style.display = 'block';
            });
        }


        // --- ê¸°íƒ€ ìœ í‹¸ë¦¬í‹° í•¨ìˆ˜ ---
        function selectMember(userId, prefix = '') {
            if (!selectedMemberIds.includes(userId)) {
                selectedMemberIds.push(userId);
                updateSelectedMembersDisplay(prefix); // prefix ì „ë‹¬
            }
            // ê²€ìƒ‰ì°½ê³¼ ê²°ê³¼ì°½ ì´ˆê¸°í™”
            const memberSearchInput = document.getElementById(prefix ? 'inlineMemberSearch' : 'memberSearch');
            const searchResultsContainer = document.getElementById(prefix + 'searchResults');
            
            if(memberSearchInput) memberSearchInput.value = '';
            if(searchResultsContainer) {
                searchResultsContainer.innerHTML = '';
                searchResultsContainer.style.display = 'none';
            }
            if(memberSearchInput) memberSearchInput.focus();
        }
        
        function updateSelectedMembersDisplay(prefix = '') {
            const container = document.getElementById(prefix + 'selectedMembers');
            if (!container) return; // ëŒ€ìƒì´ ì—†ìœ¼ë©´ ì¢…ë£Œ

            container.innerHTML = selectedMemberIds.map(userId => `
                <span class="selected-member-tag">
                    ${userId}
                    <button type="button" class="selected-member-tag__remove-btn" onclick="removeMember('${userId}', '${prefix}')">&times;</button>
                </span>
            `).join('');
        }
        
        function removeMember(userId, prefix = '') {
            selectedMemberIds = selectedMemberIds.filter(id => id !== userId);
            updateSelectedMembersDisplay(prefix); // prefix ì „ë‹¬
        }
        
        function randomizeGroupIconColors() {
    	    const colors = ['#1f6feb', '#238636', '#da3633', '#fd7e14', '#6f42c1', '#0969da'];
    	    // ë™ì ìœ¼ë¡œ ìƒì„±ëœ ì•„ì´ì½˜ì„ ì°¾ê¸° ìœ„í•´ ì„ íƒìë¥¼ '.group-icon'ìœ¼ë¡œ ë³€ê²½í•©ë‹ˆë‹¤.
    	    const icons = document.querySelectorAll('.group-icon'); 
    	    icons.forEach((icon, index) => {
    	        icon.style.backgroundColor = colors[index % colors.length];
    	    });
    	}
        
    </script>
</body>
</html>
