        // --- ëª¨ë‹¬ ë° UI ì œì–´ í•¨ìˆ˜ ---
        function openModal(modalId) { document.getElementById(modalId)?.classList.add('is-visible'); }
        function closeModal(modalId) { 
            const modal = document.getElementById(modalId);
            if(modal) {
                modal.classList.remove('is-visible');
                const form = modal.querySelector('form');
                if(form) form.reset(); // ëª¨ë‹¬ ë‹«ì„ ë•Œ í¼ ì´ˆê¸°í™”
            }
        }

        function toggleDropdown(event, groupNo) {
            event.preventDefault();
            event.stopPropagation();
            closeAllDropdowns(groupNo);
            document.getElementById(`dropdown-${groupNo}`)?.classList.toggle('show');
        }
        function closeAllDropdowns(exceptGroupNo = null) {
            document.querySelectorAll('.dropdown-menu').forEach(dropdown => {
                if (dropdown.id !== `dropdown-${exceptGroupNo}`) {
                    dropdown.classList.remove('show');
                }
            });
        }
        
        function openCreateGroupModal() {
            // ... (ê´€ë ¨ ë¡œì§ ì¶”ê°€ í•„ìš”) ...
            openModal('createGroupModal');
        }
        async function openInviteModal() {
            const inviteListContainer = document.getElementById('inviteList');
            inviteListContainer.innerHTML = 'ë¡œë”© ì¤‘...';
            openModal('inviteModal'); // ëª¨ë‹¬ ì°½ ì—´ê¸°

            try {
                // ìˆ˜ì •ëœ API í˜¸ì¶œ
                const response = await fetch('/invite/my/ajax-data'); // ìˆœìˆ˜ JSON ë°ì´í„°ë¥¼ ë°˜í™˜í•˜ëŠ” APIê°€ í•„ìš”í•©ë‹ˆë‹¤.
                if (!response.ok) throw new Error('ì´ˆëŒ€ ëª©ë¡ ë¡œë“œ ì‹¤íŒ¨');
                
                const invites = await response.json();

                if (invites.length === 0) {
                    inviteListContainer.innerHTML = '<p>ë°›ì€ ì´ˆëŒ€ê°€ ì—†ìŠµë‹ˆë‹¤.</p>';
                    return;
                }

                // ì´ˆëŒ€ ìœ í˜•ì— ë”°ë¼ ë‹¤ë¥¸ HTML ìƒì„±
                inviteListContainer.innerHTML = invites.map(invite => {
                    if (invite.inviteType === 'GROUP') {
                        return `
                            <div class="invite-item">
                                <p>'${invite.targetName}' ê·¸ë£¹ì—ì„œ '${invite.inviterId}'ë‹˜ì´ ì´ˆëŒ€í–ˆìŠµë‹ˆë‹¤.</p>
                                <div>
                                    <button class="btn btn--primary" onclick="acceptGroupInvite(${invite.inviteNo})">ìˆ˜ë½</button>
                                    <button class="btn" onclick="rejectGroupInvite(${invite.inviteNo})">ê±°ì ˆ</button>
                                </div>
                            </div>`;
                    } else if (invite.inviteType === 'LIVEROOM') {
                        return `
                             <div class="invite-item" style="background-color: #202d3a;">
                                <p>'${invite.targetName}' ë¼ì´ë¸Œ ë£¸ì—ì„œ '${invite.inviterId}'ë‹˜ì´ ì´ˆëŒ€í–ˆìŠµë‹ˆë‹¤.</p>
                                <div>
                                    <button class="btn btn--primary" onclick="acceptLiveRoomInvite(${invite.inviteNo})">ìˆ˜ë½</button>
                                    <button class="btn" onclick="rejectLiveRoomInvite(${invite.inviteNo})">ê±°ì ˆ</button>
                                </div>
                            </div>`;
                    }
                }).join('');

            } catch (error) {
                console.error(error);
                inviteListContainer.innerHTML = '<p style="color:red;">ëª©ë¡ì„ ë¶ˆëŸ¬ì˜¤ëŠ”ë° ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤.</p>';
            }
        }
        
        
     // ë¼ì´ë¸Œ ë£¸ ì´ˆëŒ€ ìˆ˜ë½/ê±°ì ˆ í•¨ìˆ˜ (ìƒˆë¡œ ì¶”ê°€)
        async function acceptLiveRoomInvite(inviteNo) {
            if(!confirm('ë¼ì´ë¸Œ ë£¸ ì´ˆëŒ€ë¥¼ ìˆ˜ë½í•˜ì‹œê² ìŠµë‹ˆê¹Œ?')) return;
            try {
                const response = await fetch(`/api/live-rooms/invites/${inviteNo}/accept`, { method: 'POST' });
                const result = await response.json();
                alert(result.message);
                if(response.ok) location.reload();
            } catch(e) {
                alert('ì²˜ë¦¬ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.');
            }
        }

        async function rejectLiveRoomInvite(inviteNo) {
            if(!confirm('ë¼ì´ë¸Œ ë£¸ ì´ˆëŒ€ë¥¼ ê±°ì ˆí•˜ì‹œê² ìŠµë‹ˆê¹Œ?')) return;
             try {
                const response = await fetch(`/api/live-rooms/invites/${inviteNo}/reject`, { method: 'POST' });
                const result = await response.json();
                alert(result.message);
                if(response.ok) location.reload();
            } catch(e) {
                alert('ì²˜ë¦¬ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.');
            }
        }
        
