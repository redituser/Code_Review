package com.assignment.like.vo; // vo 또는 domain, entity 등 패키지는 프로젝트 구조에 맞게 생성하세요.

import com.assignment.board.vo.BoardVO;
import com.assignment.member.vo.MemberVO;
import jakarta.persistence.*;
import lombok.Getter;
import lombok.Setter;
import org.hibernate.annotations.OnDelete;
import org.hibernate.annotations.OnDeleteAction;

import java.util.Date;

@Entity
@Getter
@Setter
@Table(name = "CC_LIKE", uniqueConstraints = {
    @UniqueConstraint(columnNames = {"BOARD_NO", "MEMBER_ID"}) // 복합 유니크 키 설정
})
public class Like {

    @Id
    @GeneratedValue(strategy = GenerationType.SEQUENCE, generator = "SEQ_CC_LIKE_NO")
    @SequenceGenerator(name = "SEQ_CC_LIKE_NO", sequenceName = "SEQ_CC_LIKE_NO", allocationSize = 1)
    @Column(name = "LIKE_NO")
    private Long likeNo;

    // BoardVO 엔티티와의 관계 설정
    @ManyToOne(fetch = FetchType.LAZY)
    @JoinColumn(name = "BOARD_NO", nullable = false)
    @OnDelete(action = OnDeleteAction.CASCADE) // 게시글 삭제 시, 관련 좋아요도 삭제
    private BoardVO board;

    // MemberVO 엔티티와의 관계 설정
    @ManyToOne(fetch = FetchType.LAZY)
    @JoinColumn(name = "MEMBER_ID", nullable = false)
    private MemberVO member;

    @Column(name = "LIKE_TYPE", nullable = false)
    private char likeType = 'L'; // 기본값 'L'

    @Temporal(TemporalType.TIMESTAMP)
    @Column(name = "CREATE_DATE", nullable = false, updatable = false)
    private Date createDate = new Date();
}