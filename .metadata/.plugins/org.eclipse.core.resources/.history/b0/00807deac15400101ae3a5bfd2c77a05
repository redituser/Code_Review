package com.assignment.admin.service;

import java.time.LocalDateTime;

import com.assignment.member.vo.MemberVO;

public class AdminMemberDto {

    private String id;
    private String nickName;
    private String email;
    private char type;
    private LocalDateTime createDate;

    // View에서 조건부 렌더링을 위한 boolean 값
    private boolean isAdmin;
    private boolean isUser;

    // MemberVO를 AdminMemberDto로 변환하는 생성자
    public AdminMemberDto(MemberVO member) {
        this.id = member.getId();
        this.nickName = member.getNickName();
        this.email = member.getEmail();
        this.type = member.getType();
        this.createDate = member.getSysdate();
        
        // 등급에 따라 boolean 값 설정
        this.isAdmin = (member.getType() == 'A');
        this.isUser = (member.getType() == 'U');
    }

    // Getters
    public String getId() { return id; }
    public String getNickName() { return nickName; }
    public String getEmail() { return email; }
    public char getType() { return type; }
    public LocalDateTime getCreateDate() { return createDate; }
    public boolean isAdmin() { return isAdmin; }
    public boolean isUser() { return isUser; }
}
